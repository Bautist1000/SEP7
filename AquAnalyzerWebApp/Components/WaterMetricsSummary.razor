@using AquAnalyzerAPI.Models
@using AquAnalyzerAPI.Services
@using AquAnalyzerAPI.Interfaces
@using System.Linq
@using System
@using System.Threading.Tasks
@using System.Collections.Generic
@inject IWaterMetricsService WaterMetricsService


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Water Metrics Summary</h3>
    </div>
    <div class="card-body">
        @if (metrics != null)
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="info-box">
                        <span class="info-box-icon bg-info"><i class="fas fa-tint"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Total Water Consumption</span>
                            <span class="info-box-number">@metrics.TotalWaterConsumption.ToString("N2") m³</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-box">
                        <span class="info-box-icon bg-success"><i class="fas fa-recycle"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Recycled Water Usage</span>
                            <span class="info-box-number">@metrics.RecycledWaterUsage.ToString("N2") m³</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-box">
                        <span class="info-box-icon bg-warning"><i class="fas fa-water"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Leakage Rate</span>
                            <span class="info-box-number">@metrics.LeakageRate.ToString("N2")%</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Water Efficiency</h3>
                        </div>
                        <div class="card-body">
                            <strong>Water Efficiency Ratio:</strong> @metrics.WaterEfficiencyRatio.ToString("N4")
                            <p class="text-muted">Represents water volume per unit of electricity consumed</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title">Total Water Saved</h3>
                        </div>
                        <div class="card-body">
                            <strong>Water Saved:</strong> @metrics.TotalWaterSaved.ToString("N2") m³
                            <p class="text-muted">Calculated from recycled water sources</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <p>Loading metrics...</p>
        }
    </div>
</div>

@code {
    private WaterMetrics? metrics;

    protected override async Task OnInitializedAsync()
    {
        var allMetrics = await WaterMetricsService.GetAllMetricsAsync();
        metrics = allMetrics.OrderByDescending(m => m.DateGeneratedOn).FirstOrDefault();
    }
}