@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager NavigationManager

<nav class="navbar navbar-expand-lg navbar-light bg-water-light shadow-sm">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <span class="brand-text ml-2">AquAnalyzer</span>
        </a>
        <div class="hamburger" @onclick="ToggleMenu">
            <div></div>
            <div></div>
            <div></div>
        </div>
        <div class="collapse navbar-collapse nav-links @(isMenuOpen ? "show" : "")" id="navbarNav">
            <AuthorizeView>
                <Authorized>
                    <ul class="navbar-nav mr-auto">
                        <AuthorizeView Roles="Analyst">
                            <Authorized Context="analystContext">
                                <li class="nav-item">
                                    <NavLink class="nav-link" href="/water-dashboard">
                                        <i class="fas fa-chart-line mr-2"></i>Dashboard
                                    </NavLink>
                                </li>
                                <li class="nav-item">
                                    <NavLink class="nav-link" href="/manage-waterdata">
                                        <i class="fas fa-water mr-2"></i>Manage Data
                                    </NavLink>
                                </li>
                                <li class="nav-item">
                                    <NavLink class="nav-link" href="/notifications">
                                        <i class="fas fa-bell mr-2"></i>Notifications
                                    </NavLink>
                                </li>
                            </Authorized>
                        </AuthorizeView>

                        <AuthorizeView Roles="VisualDesigner">
                            <Authorized Context="designerContext">
                                <li class="nav-item">
                                    <NavLink class="nav-link" href="/reports">
                                        <i class="fas fa-chart-bar mr-2"></i>Reports
                                    </NavLink>
                                </li>
                            </Authorized>
                        </AuthorizeView>
                    </ul>
                </Authorized>
            </AuthorizeView>
            <div class="profile-section">
                <AquAnalyzerWebApp.Components.Layout.ProfileBar />
            </div>
        </div>
    </div>
</nav>

@code {
    private bool isMenuOpen = false;

    private void ToggleMenu()
    {
        isMenuOpen = !isMenuOpen;
    }
}

<style>
    .nav-menu {
        position: relative;
        width: 100%;
        height: 100px;
        background: rgb(58, 78, 127);
        background: -moz-radial-gradient(circle, rgba(58, 78, 127, 1) 0%, rgba(15, 23, 42, 1) 65%, rgba(0, 0, 0, 1) 100%);
        background: -webkit-radial-gradient(circle, rgba(58, 78, 127, 1) 0%, rgba(15, 23, 42, 1) 65%, rgba(0, 0, 0, 1) 100%);
        background: radial-gradient(circle, rgba(58, 78, 127, 1) 0%, rgba(15, 23, 42, 1) 65%, rgba(0, 0, 0, 1) 100%);
        color: #00000000;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 20px;
        margin: 0;
        box-sizing: border-box;
        position: relative;
    }

    .logo {
        font-size: 28px;
        font-weight: bold;
        color: #ffffff;
        margin-right: 40px;
    }

    .nav-links {
        display: flex;
        gap: 20px;
        margin-right: auto;
    }

    .nav-links a {
        color: #000000;
        text-decoration: none !important;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: color 0.3s ease;
    }

    .nav-links a:hover {
        color: #3b82f6;
    }

    .nav-links a.active {
        color: #3b82f6;
        font-weight: bold;
    }

    .nav-icon {
        font-size: 18px;
    }

    .profile-bar {
        margin-left: auto;
        display: flex;
        align-items: center;
        margin-right: 30px;
    }

    .hamburger {
        display: none;
        flex-direction: column;
        position: relative;
    }

    .hamburger div {
        width: 25px;
        height: 3px;
        background-color: #333;
        margin: 4px;
    }

    .profile-section {
        margin-left: auto;
        /* Push to far right */
        display: flex;
        align-items: center;
        padding-right: 20px;
    }

    @@media (max-width: 768px) {

        .hamburger {
            display: flex;
            flex-direction: column;
            cursor: pointer;
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
        }

        .nav-links {
            display: none;
            flex-direction: column;
            gap: 10px;
            background-color: #1e293b;
            position: absolute;
            top: calc(100% + 5px);
            left: 55%;
            transform: translateX(-50%);
            padding: 10px;
            border-radius: 8px;
            z-index: 1000;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            width: auto;
        }

        .nav-links.show {
            display: flex;
        }

        .nav-menu {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
        }

        .profile-section {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
        }
    }
</style>
